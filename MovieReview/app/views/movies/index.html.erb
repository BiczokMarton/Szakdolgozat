<h1 calss="current-category" > <%=params[:category] %> Movies</h1>
<div class="row">
	
<% @movie.each do |movie|%>

	<div class="col-md-4">
		<div class="movie_frame">
			<div class="index_img">
				<a href="/movies/<%=movie.id%>">
					<img class='movie<%=movie.id%>' src="<%= @image[movie.id] %>" height="200" width= "auto">
					
				</a>
			</div>
			
			<div class="inside">
	 			<%=movie.title%>
	 			<div class="average" data-score=<%= @average[movie.id] %> ></div>

	 		</div>
	 		

		</div>
	</div>

<%end%>
</div>
<%= paginate @movie %>
<script>
	$('.average').raty({
		readOnly: true,
		score: function() {
			return $(this).attr('data-score');
		},
		path: '/assets/'
	});
</script>


